<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="15dip">
	
	<RelativeLayout
		android:id="@+id/relative_todo_item"
		android:layout_width="fill_parent"
		android:layout_height="100dip"
		android:background="@android:drawable/title_bar">
		<RelativeLayout
			android:id="@+id/relative_todo_priority"
			android:layout_width="20dip"
			android:layout_height="fill_parent">
			<ImageView 
				android:id="@+id/image_star2"
				android:layout_width="20dip"
				android:layout_height="20dip"
				android:background="@drawable/star_full"
				android:layout_centerInParent="true"
				android:visibility="gone">
			</ImageView>
			<ImageView 
				android:id="@+id/image_star1"
				android:layout_above="@+id/image_star2"
				android:layout_width="20dip"
				android:layout_height="20dip"
				android:layout_marginBottom="2dip"
				android:background="@drawable/star_full"
				android:visibility="gone">
			</ImageView>
			<ImageView 
				android:id="@+id/image_star3"
				android:layout_below="@+id/image_star2"
				android:layout_width="20dip"
				android:layout_height="20dip"
				android:layout_marginTop="2dip"
				android:background="@drawable/star_full"
				android:visibility="gone">
			</ImageView>
		</RelativeLayout>
		<RelativeLayout 
			android:id="@+id/relative_todo_nonpriority"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_toRightOf="@id/relative_todo_priority">
			
			<RelativeLayout 
				android:id="@+id/relative_todo_tophalf"
				android:layout_above="@+id/relative_todo_due"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent">
				
				<RelativeLayout 
					android:id="@+id/relative_todo_details"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_toLeftOf="@+id/relative_todo_check">
					<TextView 
						android:id="@+id/text_todo_details"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="some text"
						android:textAppearance="@android:style/TextAppearance.Medium"
						android:maxLines="3"
						android:padding="10dip"/>
				</RelativeLayout>
				
				<RelativeLayout 
					android:id="@+id/relative_todo_check"
					android:layout_width="120dip"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true">
					
					<Button 
						android:id="@+id/button_check_delete"
						android:layout_width="60dip"
						android:layout_height="55dip"
						android:layout_alignTop="@+id/button_check_todo"
						android:background="@drawable/trash_can"
						android:layout_toLeftOf="@+id/button_check_todo"/>
					
					<Button 
						android:id="@+id/button_check_todo"
						android:layout_width="60dip"
						android:layout_height="55dip"
						android:layout_alignParentRight="true"
						android:layout_marginRight="10dip"
						android:layout_marginTop="10dip"
						android:focusable="false"
						android:background="@drawable/bullet_accept_off"/>
				</RelativeLayout>
			</RelativeLayout>
			
			<LinearLayout 
				android:id="@+id/linear_todo_due"
				android:layout_width="fill_parent"
				android:layout_height="30dip"
				android:layout_alignParentBottom="true">
				<LinearLayout 
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="2">
					<TextView 
						android:layout_width="wrap_content"
						android:layout_height="fill_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="Due"/>
					<TextView 
						android:id="@+id/text_todo_item_every"
						android:layout_width="wrap_content"
						android:layout_height="fill_parent"
						android:layout_weight="1"
						android:gravity="center_vertical"
						android:text="EVERY"/>
				</LinearLayout>
				<LinearLayout 
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1">
					<ImageView 
						android:id="@+id/image_todo_item_day1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/day_su"
						android:layout_weight="1"/>
					<ImageView 
						android:id="@+id/image_todo_item_day2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/day_mo"
						android:layout_weight="1"/>
					<ImageView 
						android:id="@+id/image_todo_item_day3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/day_tu"
						android:layout_weight="1"/>
					<ImageView 
						android:id="@+id/image_todo_item_day4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/day_we"
						android:layout_weight="1"/>
					<ImageView 
						android:id="@+id/image_todo_item_day5"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/day_th"
						android:layout_weight="1"/>
					<ImageView 
						android:id="@+id/image_todo_item_day6"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/day_fr"
						android:layout_weight="1"/>
					<ImageView 
						android:id="@+id/image_todo_item_day7"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/day_sa"
						android:layout_weight="1"/>
				</LinearLayout>
				
			</LinearLayout>
			
		</RelativeLayout>
	</RelativeLayout>

</RelativeLayout>
