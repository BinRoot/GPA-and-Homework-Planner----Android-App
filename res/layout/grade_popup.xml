<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="20dip">

	<TextView 
		android:id="@+id/text_grades_classTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:textAppearance="@android:style/TextAppearance.Medium"
		android:text="Class"
		android:layout_centerHorizontal="true"/>

	<ScrollView
		android:id="@+id/scroll_grades"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dip"
		android:layout_below="@id/text_grades_classTitle"
		android:layout_above="@+id/button_grades_done">

		<LinearLayout
			android:id="@+id/linear_grades_main"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Select predicted grade:" />

			<RelativeLayout 
				android:id="@+id/relative_grades_gallery"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				
				<Gallery
					android:id="@+id/gallery_grades_predicted"
					android:layout_alignParentTop="true"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:spacing="20dip"
					android:background="@drawable/grades_gallery"/>
				
				<RelativeLayout 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentTop="true"
					android:background="@drawable/grades_picker">
				</RelativeLayout>
				
			</RelativeLayout>
			

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dip">
				<TextView
					android:id="@+id/text_grades_credits"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"
					android:text="Select weight/credits:" />
					
				<LinearLayout
					android:id="@+id/numberPicker_credits"
					android:layout_alignParentRight="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:orientation="vertical">
					<Button 
						android:id="@+id/button_credits_plus"
						android:layout_width="fill_parent"
						android:layout_height="30dip"
						android:text="+"
						android:onClick="creditsPlusClicked"/>
						
					<EditText 
						android:id="@+id/edit_credits"
						android:layout_width="100dip"
						android:layout_height="40dip"
						android:gravity="center"
						android:editable="false"
						android:focusable="false"
						android:text="3.0"/>
						
					<Button 
						android:id="@+id/button_credits_minus"
						android:layout_width="fill_parent"
						android:layout_height="30dip"
						android:text="-"
						android:onClick="creditsMinusClicked"/>
					
					
				</LinearLayout>


			</RelativeLayout>

			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dip"
				android:orientation="vertical">
				
				<Button 
					android:id="@+id/grades_advanced"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:onClick="advSettingsClicked"
					android:text="Advanced settings..."/>
				
				<RelativeLayout 
					android:id="@+id/relative_grades_adv"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:layout_marginTop="10dip"
					android:visibility="invisible">
					
					<TextView 
						android:id="@+id/text_grades_adv_goal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Goal -- Highest potential grade:"/>
					
					<RelativeLayout 
						android:id="@+id/relative_grades_gallery2"
						android:layout_below="@+id/text_grades_adv_goal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
						
						<Gallery
							android:id="@+id/gallery_grades_goal"
							android:layout_alignParentTop="true"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:spacing="20dip"
							android:background="@drawable/grades_gallery"/>
						
						<RelativeLayout 
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_alignParentTop="true"
							android:background="@drawable/grades_picker">
						</RelativeLayout>
						
					</RelativeLayout>
					
					
					<TextView 
						android:id="@+id/text_grades_adv_guar"
						android:layout_below="@id/relative_grades_gallery2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Guaranteed -- Lowest potential grade:" 
						android:layout_marginTop="10dip"/>
					
					<RelativeLayout 
						android:id="@+id/relative_grades_gallery3"
						android:layout_below="@+id/text_grades_adv_guar"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
						
						<Gallery
							android:id="@+id/gallery_grades_guaranteed"
							android:layout_alignParentTop="true"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:spacing="20dip"
							android:background="@drawable/grades_gallery"/>
						
						<RelativeLayout 
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_alignParentTop="true"
							android:background="@drawable/grades_picker">
						</RelativeLayout>
						
					</RelativeLayout>
					
				</RelativeLayout>
				
			</LinearLayout>

		</LinearLayout>
	</ScrollView>


	<Button
		android:id="@+id/button_grades_done"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:onClick="doneGradesClicked"
		android:text="DONE" />
	

</RelativeLayout>